{
  "name": "learn-tape",
  "repository": {
    "type": "git",
    "url": "https://github.com/dwyl/learn-tape.git"
  },
  "description": "Simple Test Driven Development (TDD) Tutorial using Tape",
  "author": "dwyl & friends!",
  "version": "1.0.0",
  "devDependencies": {
    "istanbul": "^0.3.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0"
  },
  "scripts": {
    "test": "tape ./test/*.test.js",
    "spec": "tape ./test/*.test.js | tap-spec",
    "coverage": "istanbul cover ./node_modules/tape/bin/tape ./test/*.test.js && istanbul check-coverage --statements 100 --functions 100 --lines 100 --branches 100"
  },
  "pre-commit": [
    "jshint",
    "coverage"
  ],
  "license": "MIT"
}
